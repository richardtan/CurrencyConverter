<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
<!--
	Due to limitations in Android's theming system any theme customizations must be declared in two attributes. 
	The normal android-prefixed attributes apply the theme to the native action bar and the unprefixed 
	attributes are for the custom implementation 
 -->
	<style name="AppTheme" parent="Theme.AppCompat.Light">
		<item name="actionBarStyle">@style/AppTheme.ActionBarStyle</item>
		<item name="android:actionBarStyle">@style/AppTheme.ActionBarStyle</item>
		<item name="actionBarTabTextStyle">@style/AppTheme.ActionBar.TabText</item>
		<item name="android:actionBarTabTextStyle">@style/AppTheme.ActionBar.TabText</item>
		<item name="android:colorBackground">@color/backgroundColor</item>
		<item name="android:windowBackground">@color/backgroundColor</item>
		<item name="android:textColor">@color/textColor</item>
	</style>

	<style name="AppTheme.ActionBarStyle" parent="Widget.AppCompat.ActionBar">
		<item name="titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
		<item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
	</style>

	<style name="AppTheme.ActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
		<item name="android:textColor">@color/actionBarTextColor</item>
	</style>
	
	<style name="AppTheme.ActionBar.TabText" parent="Widget.AppCompat.ActionBar.TabText">
		<item name="android:textColor">@color/actionBarTextColor</item>
	</style>
</resources>